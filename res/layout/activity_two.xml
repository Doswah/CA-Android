<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    
    <TextView
        android:id="@+id/third_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/second_place"
        android:layout_below="@+id/second_place"
        android:text="3rd" />

    <TextView
        android:id="@+id/my_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/third_place"
        android:layout_below="@+id/third_place"
        android:text="7th" />

    <TextView
        android:id="@+id/first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/second_place"
        android:layout_marginLeft="17dp"
        android:layout_toRightOf="@+id/first_place"
        android:text="Joshua Rivera" />

    <TextView
        android:id="@+id/my_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/first_name"
        android:layout_below="@+id/first_name"
        android:text="Christian Damo" />

    <TextView
        android:id="@+id/third_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/my_name"
        android:layout_below="@+id/my_name"
        android:text="Kenny Luong" />

    <TextView
        android:id="@+id/second_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/third_name"
        android:layout_below="@+id/third_name"
        android:text="Harley Cumming" />

    <TextView
        android:id="@+id/first_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/second_place"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:text="1st" />

    <TextView
        android:id="@+id/second_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/first_place"
        android:layout_centerVertical="true"
        android:text="2nd" />

    <TextView
        android:id="@+id/leaderboard_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/first_place"
        android:layout_alignLeft="@+id/first_place"
        android:layout_marginBottom="14dp"
        android:text="Leaderboard"
        tools:context=".MainController" />

    <TextView
        android:id="@+id/first_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/my_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="22dp"
        android:text="80" />

    <TextView
        android:id="@+id/second_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/my_name"
        android:layout_alignBottom="@+id/my_name"
        android:layout_alignLeft="@+id/first_score"
        android:text="70" />

    <TextView
        android:id="@+id/third_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/first_score"
        android:layout_below="@+id/second_score"
        android:text="60" />

    <TextView
        android:id="@+id/my_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/first_score"
        android:layout_below="@+id/third_score"
        android:text="50" />

</RelativeLayout>